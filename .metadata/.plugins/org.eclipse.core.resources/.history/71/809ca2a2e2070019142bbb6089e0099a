package com.htrfid.finance.controller;

import com.htrfid.finance.entity.WmCategoryEntity;
import com.htrfid.finance.service.WmCategoryService;
import com.htrfid.registry.consul.model.NewRequestMapping;
import com.htrfid.util.Result;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;


/**
 * @author auto_tengteng
 * @version V1.0
 * @className WmCategoryController
 * @description 工资类别表
 * @email ttkj2005@126.com
 * @date 2018-12-07 17:00:33
 **/
@RestController
@NewRequestMapping(version = "V1.0", value = "/wmcategoryService", method = RequestMethod.POST, serviceName = "wmCategory", serviceDesc = "this is a wmCategory controller.")
public class WmCategoryController {
    @Autowired
    private WmCategoryService wmCategoryService;


    /** 
     * @description:查询工资类别表信息列表
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 14:19  
     * @param [] 
     * @return java.util.List<com.htrfid.finance.entity.WmCategoryEntity>  
     */ 
    @NewRequestMapping(value = "/list/{sobId}", method = RequestMethod.POST, serviceName = "api-list", serviceDesc = "this is a wmCategory controller API list.")
    public List<WmCategoryEntity> list(@PathVariable("sobId") Long sobId) {
        List<WmCategoryEntity> list = wmCategoryService.list(sobId);
        return list;

    }


    /**
     * @description:查询工资类别详情
     *
     * @author zy
     * @eamil zy@htrfid.com
     * @date 2018-12-11 14:19
     * @param [id]
     * @return com.htrfid.finance.entity.WmCategoryEntity
     */
    @RequestMapping("/info/{id}")
    @NewRequestMapping(value = "/info/{id}", method = RequestMethod.POST, serviceName = "api-info", serviceDesc = "this is a wmCategory controller API info.")
    public WmCategoryEntity info(@PathVariable("id") Long id) {
        WmCategoryEntity wmCategory = wmCategoryService.info(id);
        return wmCategory;
    }


    /** 
     * @description:新增工资类别
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 14:19  
     * @param [wmCategory] 
     * @return java.lang.Boolean  
     */ 
    @RequestMapping("/add")
    @NewRequestMapping(value = "add", method = RequestMethod.POST, serviceName = "api-add", serviceDesc = "this is a wmCategory controller API add.")
    public Boolean add(@RequestBody WmCategoryEntity wmCategory) {
        Boolean success = wmCategoryService.add(wmCategory);
        return success;
    }


    /** 
     * @description:修改工资类别
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 14:20
     * @param [wmCategory] 
     * @return com.htrfid.util.Result  
     */ 
    @NewRequestMapping(value = "/update", method = RequestMethod.POST, serviceName = "api-update", serviceDesc = "this is a wmCategory controller API update.")
    public Boolean update(@RequestBody WmCategoryEntity wmCategory) {
        Boolean update = wmCategoryService.update(wmCategory);
        return update;
    }


    /** 
     * @description:删除工资类别
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 15:21  
     * @param [id] 
     * @return java.lang.Boolean  
     */ 
    @NewRequestMapping(value = "/delete/{id}/{sobId}", method = RequestMethod.POST, serviceName = "api-delete", serviceDesc = "this is a wmCategory controller API delete.")
    public Boolean delete(@PathVariable("id") Long id,@PathVariable("sobId") Long sobId) {
        Boolean delete = wmCategoryService.delete(id, sobId);
        return delete;
    }
    
    /** 
     * @description:选择工资类别
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 15:23
     * @param [id] 
     * @return java.lang.Boolean  
     */
    @NewRequestMapping(value = "/select/{id}/{sobId}", method = RequestMethod.POST, serviceName = "api-select", serviceDesc = "this is a wmCategory controller API select.")
    public Boolean select(@PathVariable("id") Long id,@PathVariable("sobId") Long sobId) {
        Boolean select = wmCategoryService.select(id, sobId);
        return select;
    }

    /** 
     * @description:查询已选择工资类别id
     *   
     * @author zy  
     * @eamil zy@htrfid.com
     * @date 2018-12-11 15:57
     * @param [sobId] 
     * @return java.lang.Long  
     */ 
    @NewRequestMapping(value = "/selectedid/{sobId}", method = RequestMethod.POST, serviceName = "api-selectedid", serviceDesc = "this is a wmCategory controller API selectedid.")
    public Long getSelectedId(@PathVariable("sobId") Long sobId) {
        Long id = wmCategoryService.getSelectedId(sobId);
        return id;
    }
    /**
     * @description:TODO 查询默认的工资类别对象
     * @author tangmi
     * @eamil tangmi6698@163.com
     * @date 2018-12-12 17:43
     * @param  sobId
     * @return com.htrfid.finance.entity.WmCategoryEntity
     */
    @NewRequestMapping(value = "/getSelected/{sobId}", method = RequestMethod.POST, serviceName = "api-getSelected", serviceDesc = "this is a wmCategory controller API getSelected.")
    public WmCategoryEntity getSelected(@PathVariable("sobId")Long sobId){
        WmCategoryEntity wmCategoryEntity = wmCategoryService.getSelected(sobId);
        return wmCategoryEntity;
    }

    public static void main(String[] args) {
        System.out.println(Integer.toBinaryString(0b00001000));
    }

}
